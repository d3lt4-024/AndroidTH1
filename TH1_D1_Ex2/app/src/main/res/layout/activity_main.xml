<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ListView
        android:id="@+id/listViewJob"
        android:layout_width="match_parent"
        android:layout_height="306dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="1dp" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/create"
        android:textColor="#000000"
        app:backgroundTint="#B8B8B8" />

    <RadioButton
        android:id="@+id/radioButtonIsActivated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnCreate"
        android:text="Activated" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/radioButtonIsActivated"
        android:layout_marginBottom="38dp"
        android:text="Date created"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView13"
        android:layout_marginBottom="38dp"
        android:text="Salary"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView14"
        android:layout_marginBottom="38dp"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView15"
        android:layout_marginBottom="38dp"
        android:text="Image"
        android:textColor="#000000"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/editTextDateCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/radioButtonIsActivated"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="72dp"
        android:layout_toRightOf="@id/textView13"
        android:layout_above="@id/radioButtonIsActivated"
        android:ems="10"
        android:inputType="date"
        android:text="Pick a date"/>

    <EditText
        android:id="@+id/editTextSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView13"
        android:layout_marginLeft="59dp"
        android:layout_marginBottom="42dp"
        android:layout_toRightOf="@id/textView14"
        android:ems="10"
        android:inputType="number"
        android:text="Enter salary"/>

    <EditText
        android:id="@+id/editJobName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView14"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="42dp"
        android:layout_toRightOf="@id/textView15"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter name" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView15"
        android:layout_marginLeft="61dp"
        android:layout_marginBottom="53dp"
        android:layout_toRightOf="@id/textView16" />

</RelativeLayout>